# This workflow will do a clean installation of node dependencies, cache/restore them, build the source code and run tests across different versions of node
# For more information see: https://docs.github.com/en/actions/automating-builds-and-tests/building-and-testing-nodejs

name: Node.js CI

on: [push]

jobs:
  build:

    runs-on: self-hosted

    strategy:
      matrix:
        node-version: [18.x]
        # See supported Node.js release schedule at https://nodejs.org/en/about/releases/

    steps:
    - uses: actions/checkout@v3
    - name: Node Part
      working-directory: /home/debian/FullProjectLAPR5/Backend/LogisticsAPI
      run: | 
        npm i
        npm run start
    - name: Dotnet Part
      working-directory: /home/debian/FullProjectLAPR5/Backend/Warehouse_DotNET_API/dddnetcore
      run: dotnet run
    - name: Dotnet Part
      working-directory: /home/debian/FullProjectLAPR5/Frontend/lab5frontend
      run: ng serve --host 0.0.0.0
